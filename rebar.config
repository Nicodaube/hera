{erl_opts, [debug_info]}.

{plugins, [pc]}.

{provider_hooks, [
  {pre, [
    {compile, {pc, compile}},
    {clean,   {pc, clean}}
  ]}
]}.

{port_specs, [
  {"priv/hera_wifi.so", ["c_src/*.c"]}
]}.

%% no ++, just one literal string with both include dirs separated by spaces
{port_env, [
  {"CC",     "/home/nicolas/Documents/tfe/grisp2-rtems-toolchain/bin/arm-rtems5-gcc"},
  {"CFLAGS",
   "-I/home/nicolas/Documents/tfe/grisp2-rtems-toolchain/include -I/home/nicolas/Documents/tfe/grisp2-rtems-toolchain/arm-rtems5/include -I/home/nicolas/Documents/tfe/grisp2-rtems-toolchain/arm-rtems5/imx7/include -I/home/nicolas/Documents/tfe/grisp2-rtems-toolchain/arm-rtems5/imx7/include/grisp"},
  {"LDFLAGS","-L/home/nicolas/Documents/tfe/grisp2-rtems-toolchain/arm-rtems-toolchain/arm-rtems5/imx7/lib -lgrisp -lrtems-bsdnet -lrtems"}
